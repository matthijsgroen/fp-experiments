{
  "name": "json-parse-fp",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Matthijs Groen <matthijs@kabisa.nl>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^7.8.1",
    "eslint-plugin-fp-challenge": "^1.0.1-alpha.2",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.5.3",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "start": "node javascript/challenge.js",
    "start:ts": "ts-node typescript/index.ts",
    "test": "jest",
    "lint": "eslint --ext .ts typescript/"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "arrowParens": "avoid",
    "trailingComma": "none"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:fp-challenge/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "fp-challenge",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-explicit-any": "error",
      "@typescript-eslint/no-unsafe-assignment": "error",
      "@typescript-eslint/no-unsafe-return": "error",
      "fp-challenge/no-calling-object-members": [
        "error",
        "always",
        {
          "ignore": [
            "console.log"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "*.spec.ts"
        ],
        "rules": {
          "max-statements": "off",
          "fp-challenge/no-calling-object-members": "off"
        }
      }
    ]
  }
}
